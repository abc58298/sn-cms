# EditorConfig is awesome: https://EditorConfig.org

# 适用于所有文件
root = true

[*]
charset = utf-8                   # 文件编码
end_of_line = lf                  # 行结束符
insert_final_newline = true       # 在文件末尾插入换行
trim_trailing_whitespace = true   # 删除行尾空格

# 适用于 JavaScript 和 Vue 文件
[*.{js,vue}]
indent_style = space              # 缩进风格
indent_size = 2                   # 每次缩进的空格数

# 适用于 HTML 文件
[*.html]
indent_style = space
indent_size = 2

# 适用于 CSS 文件
[*.css]
indent_style = space
indent_size = 2

# 适用于 Markdown 文件
[*.md]
indent_style = space
indent_size = 2